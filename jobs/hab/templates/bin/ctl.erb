#!/bin/bash

RUN_DIR=/var/vcap/sys/run/hab
LOG_DIR=/var/vcap/sys/log/hab
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    cd /var/vcap/packages/hab

    exec /var/vcap/packages/hab/bin/hab sup run --peer <%= link('primary_db').instances.first.address%> \
      >>  $LOG_DIR/hab.stdout.log \
      2>> $LOG_DIR/hab.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
